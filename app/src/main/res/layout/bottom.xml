<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/ic_shuffle"
               android:layout_height="wrap_content" android:id="@+id/imageView7"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:layout_width="35dp"
               android:src="@drawable/ic_fast_rewind"
               android:layout_height="35dp" android:id="@+id/imageView6"
               app:layout_constraintStart_toEndOf="@+id/imageView7" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toStartOf="@+id/imageView8"
               app:layout_constraintTop_toTopOf="parent"/>


    <ImageView android:layout_width="50dp"
               android:src="@drawable/ic_play_arrow_black_24dp"
               android:layout_height="50dp" android:id="@+id/imageView8"
               app:layout_constraintStart_toEndOf="@+id/imageView6" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toStartOf="@+id/imageView9"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/imageView9"/>
    <ImageView android:layout_width="35dp"
               android:src="@drawable/ic_fast_forward"
               android:layout_height="35dp" android:id="@+id/imageView9"
               app:layout_constraintStart_toEndOf="@+id/imageView8" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toStartOf="@+id/imageView10"
               app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_alignParentEnd="true"
               android:src="@drawable/ic_repeat"
               android:layout_height="wrap_content" android:id="@+id/imageView10"
               android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>